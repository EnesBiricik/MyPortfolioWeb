@model BlogCreateDto
@{
    Layout = "../Shared/_PanelLayout.cshtml";

}
@section title
    {
    enesbiricikcom | Blog Create
}

@section PageHeader
{
    Blog Create
}



<div class="card">
    <div class="card-body">
        <form method="post" asp-action="BlogCreate" asp-controller="Dashboard" enctype="multipart/form-data">
            <div>
                <label asp-for="@Model.Name">Blog Name:</label>
                <input class="form-control form-control-lg" type="text" asp-for="@Model.Name">
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.Name"></span>
            </div>
            <br />

            <div>
                <label asp-for="@Model.CategoryId">Category</label>
                <select class="form-control" asp-for="@Model.CategoryId">
                    <option selected disabled value="0">Choose A Category</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <br />

            <div>
                <label asp-for="@Model.Description">Blog Description:</label>
                <textarea class="form-control form-control-lg" type="text" asp-for="@Model.Description"></textarea>
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.Description"></span>
            </div>
            <br />

           
            <div class="mb-4">
                <label asp-for="@Model.Content">Blog Content</label>
                <textarea id="editor" class="form-control" asp-for="@Model.Content">@Model.Content</textarea>
                <span class="text-danger" asp-validation-for="@Model.Content"></span>
            </div>


            <div>
                <label asp-for="@Model.CoverPhoto">Blog Cover Photo:</label>
                <input class="form-control form-control-lg" type="file" name="CoverPhoto">
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.CoverPhoto"></span>
            </div>
            <br />

            <div>
                <label asp-for="@Model.IsFeatured">Blog Feature Status:</label>
                <input class="form-control form-control-lg" type="checkbox" name="IsFeatured">
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.IsFeatured"></span>
            </div>
            <br />

            <div>
                <button class="btn btn-primary" type="submit">Ekle</button>
            </div>
        </form>
    </div>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#editor').summernote({
                height: 300
            });
            $('#definition').summernote({
                height: 200
            });
        });
    </script>
}