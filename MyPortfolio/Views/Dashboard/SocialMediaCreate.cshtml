@model SocialMediaCreateDto
@{
    Layout = "../Shared/_PanelLayout.cshtml";
}

@section title
    {
    enesbiricikcom | Social Media Create
}

@section PageHeader
    {
    Social Media Create
}


<div class="card">
    <div class="card-body">
        <form method="post" asp-action="SocialMediaCreate" asp-controller="Dashboard" enctype="multipart/form-data">
            <div>
                <label>Account Name:</label>
                <input class="form-control form-control-lg" type="text" asp-for="@Model.Name">
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.Name"></span>
            </div>
            <br />

            <div>
                <label>Icon Photo:</label>
                <input class="form-control form-control-lg" type="file" name="IconFile">
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.Icon"></span>
            </div>
            <br />

            <div>
                <label>Link:</label>
                <input class="form-control form-control-lg" type="text" asp-for="@Model.Link">
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.Link"></span>
            </div>
            <br />

            <div>
                <button class="btn btn-primary" type="submit">Ekle</button>
            </div>
        </form>
    </div>
</div>