@model CategoryUpdateDto
@{
    Layout = "../Shared/_PanelLayout.cshtml";
}


@section title
    {
    enesbiricikcom | Category Update
}

@section PageHeader
    {
    Category Update
}


<div class="card">
    <div class="card-body">
        <form method="post" asp-action="CategoryUpdate" asp-controller="Dashboard">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
            <div>
                <label>Category Name</label>
                <input class="form-control form-control-lg" type="text" asp-for="@Model.Name" value="@Model.Name">
                <span style="color:red;font-weight:bold;" asp-validation-for="@Model.Name"></span>
            </div>
            <br />
            <div>
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>